<%- include('partials/header') %>

<div class="max-w-2xl mx-auto">
  <h2 class="text-2xl font-bold mb-4">Member Messages</h2>

  <% if (messages.length === 0) { %>
    <p>No messages yet.</p>
  <% } else { %>
    <% messages.forEach(msg => { %>
      <div class="bg-white p-4 rounded shadow mb-4">
        <h3 class="font-semibold text-lg"><%= msg.title %></h3>
        <p class="text-sm text-gray-500">
          <% if (currentUser && currentUser.is_member) { %>
            by <%= msg.author.first_name %> <%= msg.author.last_name %> - <%= msg.timestamp.toLocaleString() %>
          <% } else { %>
            <em>Members only</em>
          <% } %>
        </p>
        <p class="mt-2"><%= msg.text %></p>

        <% if (currentUser && currentUser.is_admin) { %>
          <form action="/messages/<%= msg.id %>/delete" method="POST" class="mt-2 text-right">
            <button class="text-red-600 hover:underline">Delete</button>
          </form>
        <% } %>
      </div>
    <% }) %>
  <% } %>
</div>

<%- include('partials/footer') %>
