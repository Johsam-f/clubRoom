<%- include('partials/header') %>

<div class="max-w-md mx-auto p-6 bg-white shadow-lg rounded-lg">
  <h2 class="text-2xl font-semibold mb-4 text-center">Create Account</h2>

  <% if (errors.length > 0) { %>
    <ul class="text-red-800 space-y-1 mb-1">
      <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <form action="/signup" method="POST" class="space-y-4">
    <div>
      <label>First Name</label>
      <input type="text" name="first_name" value="<%= formData.first_name || '' %>" class="w-full border p-2 rounded" />
    </div>
    <div>
      <label>Last Name</label>
      <input type="text" name="last_name" value="<%= formData.last_name || '' %>" class="w-full border p-2 rounded" />
    </div>
    <div>
      <label>Email</label>
      <input type="email" name="email" value="<%= formData.email || '' %>" class="w-full border p-2 rounded" />
    </div>
    <div>
      <label>Password</label>
      <input type="password" name="password" class="w-full border p-2 rounded" />
    </div>
    <div>
      <label>Confirm Password</label>
      <input type="password" name="confirmPassword" class="w-full border p-2 rounded" />
    </div>
    <div>
      <label><input type="checkbox" name="is_member" /> Become a Member</label>
    </div>
    <div>
      <label><input type="checkbox" name="is_admin" /> I'm an Admin</label>
    </div>
    <button type="submit" class="w-full bg-blue-600 text-white p-2 rounded hover:bg-blue-700">Sign Up</button>
  </form>
</div>

<%- include('partials/footer') %>
